/* pages/user/user.wxss */

/* 头部 */
.user-head {
  position: relative;
  text-align: center;
  background-color: #FF6699;
  
}
.user-head .mine-bg {
  width: 100%;
  height: 400rpx;
}
.user-head .user-head-pic-wrap {
  position: absolute;
  left: 40%;
  top: 10%;
  margin-top: 60rpx;
}
.user-head .user-head-pic  {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.user-name {
  display: block;
  margin-top: 1rpx;
  font-size: 32rpx;
  color: #fff;
  width: 150rpx;
  text-overflow: ellipsis;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
}
.bind-status{
  margin-top: 12rpx;
  color:#fff;
  border:1px solid #fff;
  border-radius: 6px;
  background-color:transparent;
  font-size: 24rpx;
  padding: 2px;
}


/* option-list  */
.option-cont {
  margin-top: 20rpx;
  background-color: #fff;
}
.option-list {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
  border-bottom: 1px solid #eee;
}
.left-list {
  display: flex;
  align-items: center;
}

.left-list image {
  width: 40rpx;
  height: 40rpx;
  margin-left: 20rpx;
}

.option-list .option-name {
  display: inline-block;
  font-size: 32rpx;
  margin-left: 20rpx;
}

.right-list image{
  width: 20rpx;
  height: 28rpx;
  margin-right: 20rpx;
}